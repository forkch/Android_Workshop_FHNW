<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.schoeb.demoapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LifecycleActivity"
            android:label="@string/title_activity_lifecycle" >
        </activity>
        <activity
            android:name=".LayoutParametersActivity"
            android:label="@string/title_activity_layout_parameters" >
        </activity>
        <activity
            android:name=".PriceActivity"
            android:label="@string/title_activity_price" >
        </activity>
    </application>

</manifest>
