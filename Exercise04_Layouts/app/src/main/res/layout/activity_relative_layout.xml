<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.schoeb.exercise04_layouts.RelativeLayoutActivity">

    <View
        android:id="@+id/redElement"
        android:background="#F00"
        android:layout_width="90px"
        android:layout_height="90px" />

    <View
        android:id="@+id/greenElement"
        android:background="#0F0"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_toRightOf="@id/redElement"/>

    <View
        android:id="@+id/blueElement"
        android:background="#00F"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_toRightOf="@id/greenElement"/>

    <View
        android:id="@+id/blackElement"
        android:background="#000"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_toRightOf="@id/blueElement"/>

    <View
        android:id="@+id/yellowElement"
        android:background="#FF0"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_toRightOf="@id/blackElement"/>

</RelativeLayout>
